{% extends 'AppBundle::layout.html.twig' %}
{% import "AppBundle::macros.html.twig" as macros %}

{% block javascripts %}
    {% javascripts '@AppBundle/Resources/public/js/ui.deckview.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        app.deck && app.deck.init({{ deck | json_encode | raw }});
    </script>
{% endblock %}

{% block body %}
    <div class="main white container">
        <div class="row">
            <div class="col-md-12">
                <h1 style="border-bottom:1px solid lightgray">{{ deck.name }}</h1>
                {% if deck.problem %}
                    <div class="alert alert-danger" role="alert">{{ deck_validation_helper.problemLabel(deck.problem) }}</div>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <!-- Left-side Column -->
            <div class="col-md-6">
                <div id="deck-content"></div>
                <div id="sideboard-content"></div>
            </div>
            <!-- Left-side Column -->

            <!-- Right-side Column -->
            <div class="col-md-6 hidden-print">
                <div class="row">
                    <div class="col-md-12" id="btn-group-deck">
                        {% include 'AppBundle:Builder:toolbar.html.twig' %}
                    </div>

                    <div class="col-md-12" style="margin-top: 10px">


                        <p>Version {{ deck.version }}</p>

                        <!-- Description -->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Description</h3>
                            </div>
                            <div class="panel-body" id="description"></div>
                        </div>
                        <!-- Description -->
                        
                        <!-- Questlogs Table -->
                        <table class="table table-condensed" id="table-questlogs">
                            <thead>
                            <tr>
                                <th colspan="2"><span class="fa fa-trophy"></span> Questlogs using a version of this deck</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set questlogs = deck.allQuestlogs %}

                            {% if questlogs | length %}
                                {% for questlog in questlogs %}
                                    {{ macros.questlog_deck_table_row(questlog.questlog) }}
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td>None.</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>

                        <!-- Fellowships Table -->
                        <table class="table table-condensed" id="table-fellowships">
                            <thead>
                            <tr><th colspan="2"><span class="fa fa-users"></span> Fellowships using this deck</th></tr>
                            </thead>
                            <tbody>
                            {% set fellowships = deck.allFellowships %}

                            {% if fellowships | length %}
                                {% for fellowship in fellowships %}
                                    {{ macros.fellowship_deck_table_row(fellowship.fellowship) }}
                                {% endfor %}
                            {% else %}
                                <tr><td>None.</td></tr>
                            {% endif %}
                            </tbody>
                        </table>

                        <table class="table table-condensed" id="table-predecessor">
                            <thead>
                                <tr>
                                    <th colspan="{% if deck.parent %}5{% else %}1{% endif %}">
                                        <span class="fa fa-backward"></span> Inspired by
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            {% if deck.parent %}
                                {{ macros.decklist_table_row(deck.parent) }}
                            {% else %}
                                <tr>
                                    <td>None. Self-made deck here.</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>

                        <!-- Published decklists Table -->
                        <table class="table table-condensed" id="table-predecessor">
                            <thead>
                                <tr>
                                    <th colspan="{% if deck.children | length %}5{% else %}1{% endif %}">
                                        <span class="fa fa-share"></span> Published versions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if deck.children | length %}
                                    {% for decklist in deck.children %}
                                        {{ macros.decklist_table_row(decklist) }}
                                    {% endfor %}
                                {% else %}
                                    <tr><td>None.</td></tr>
                                {% endif %}
                            </tbody>
                        </table>

                        {% include 'AppBundle:Builder:deck-charts.html.twig' %}

                        {% include 'AppBundle:Builder:draw-simulator.html.twig' %}

                        {% include 'AppBundle:Builder:play-simulator.html.twig' %}

                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'AppBundle:Modale:odds.html.twig' %}
    {% include 'AppBundle:Modale:delete_deck.html.twig' %}
    {% include 'AppBundle:Modale:export.html.twig' %}

{% endblock %}
